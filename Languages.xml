<settings>
 
  <language id="name.insane-dreamer.rails">
    <name>Ruby (Rails)</name>
    
    <root-zone>name.insane-dreamer.Espresso.Syntax.Programming.Rails</root-zone>
    
    <detectors>
      <extension casesensitive="false">rb</extension>
      <filename casesensitive="true">Rakefile</filename>
    </detectors>
    
  </language>

  <language id="name.insane-dreamer.erb_rails">
    <name>ERB (Rails)</name>
    
    <root-zone>name.insane-dreamer.Espresso.Syntax.Programming.ERB_Rails</root-zone>
    
    <detectors>
      <extension casesensitive="false">erb</extension>
      <extension casesensitive="false">rhtml</extension>
    </detectors>
    
  </language>
  

  <meta>
    <name>Ruby on Rails</name>
    <description>Complements the Ruby sugar, adds Rails snippets and codesense (for ruby and erb files). Tries to emulate as much functionality of the TextMate Rails bundles as possible.</description>
    <author>Fran√ßois Montel</author>
    <identifier>name.insane-dreamer.Sugar.Ruby.Rails</identifier>
    <version status="preview">0</version>
    <download format="git">git://github.com/insane-dreamer/rails.sugar.git</download>
    <url>http://github.com/insane-dreamer/rails.sugar</url>
    <dependencies>
      <dependency id="name.elliottcable.Sugar.Regex">Regex</dependency>
      <dependency id="name.elliottcable.Sugar.Ruby">Ruby</dependency>
    </dependencies>
  </meta>
  
</settings>
