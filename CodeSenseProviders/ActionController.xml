<?xml version="1.0" encoding="UTF-8"?>
<codesense>

<!--Controllers -->

    <provider>
      <selector>container.class.controller</selector>
      <completions>com.rails.ac.filters</completions>
      <completions>com.rails.ac.skipfilters</completions>
  		<complete-match capture="1">^\s*(?!\.)([a-z]\w*)</complete-match>
    </provider>

<!--Models only-->

    <provider>
      <selector>container.class.model</selector>
      <completions>com.rails.ar.associations</completions>
      <completions>com.rails.ar.callbacks</completions>
      <completions>com.rails.ar.validations</completions>
  		<complete-match>[a-z]\w*</complete-match>
    </provider>


</codesense>
